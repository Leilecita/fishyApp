<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/white_background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fish_name"
            android:gravity="center"
            android:text="Abadejo"
            android:textColor="@color/word"
            android:textSize="18sp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"

                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="(minorista)"
                    android:textColor="@color/FishyLetraDark"
                    android:textSize="@dimen/general_text"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensanssight"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="400"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="@dimen/general_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensanssight"
                        android:padding="2dp"
                        android:text="/ kg "
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="@dimen/general_text" />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/check_min"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:layout_gravity="center"
                            android:buttonTint="@color/FishyLetraDark"

                            />

                    </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="(mayorista)"
                    android:textColor="@color/FishyRose3"
                    android:textSize="@dimen/general_text"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/FishyRose3"
                            android:text="200"
                            android:padding="2dp"
                            android:id="@+id/wholesaler_price"
                            android:gravity="center"
                            android:fontFamily="@font/opensanssight"
                            android:layout_gravity="center"
                            android:textSize="@dimen/general_text"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:fontFamily="@font/opensanssight"
                            android:text="/ kg "
                            android:textColor="@color/FishyRose3"
                            android:textSize="@dimen/general_text"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/check_may"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:buttonTint="@color/FishyRose3"

                            />

                    </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/quantity"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:background="@drawable/rec_edit"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:hint="kg"
                android:textColorHint="@color/word_clear"
                android:textColor="@color/FishyLetraDark"
                android:textSize="18sp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CANCELAR"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold" />


            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorDialogButton"

                android:background="@drawable/rec_dialog"
                android:padding="4dp"
                android:text="ok"
                android:textColor="#ffff" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>

