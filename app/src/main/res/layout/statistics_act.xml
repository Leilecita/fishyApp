<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/create_order">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:id="@+id/topbar"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/line_orders"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/shipped"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="110dp"
                            android:id="@+id/textOrders"
                            android:background="@drawable/rect_bottom"
                            android:layout_height="5dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/line_fact"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/piggybank"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="110dp"
                            android:id="@+id/textFact"
                            android:background="@drawable/rect_bottom_white"
                            android:layout_height="5dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lineRent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/bars"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="110dp"
                            android:id="@+id/textRent"
                            android:background="@drawable/rect_bottom_white"
                            android:layout_height="5dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lineFish"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/fish"
                            android:layout_marginBottom="10dp"
                            />
                        <TextView
                            android:layout_width="110dp"
                            android:id="@+id/textfish"
                            android:background="@drawable/rect_bottom_white"
                            android:layout_height="5dp" />


                    </LinearLayout>

                </LinearLayout>




            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/circle"
                android:layout_below="@id/topbar"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">


                <com.txusballesteros.widgets.FitChart
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    app:strokeSize="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/fitChart"
                    app:animationMode="overdraw" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="70sp"
                        android:textColor="@color/word"
                        android:fontFamily="@font/opensanssight"
                        android:gravity="center"
                        android:text="85%"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="200dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/opensanssight"
                        android:id="@+id/textIntoCircle"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:text="Pedidos" />

                </LinearLayout>


            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/linegraphInc"
                android:layout_below="@id/circle"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

            <com.hadiidbouk.charts.ChartProgressBar
                android:id="@+id/ChartProgressBar"
                android:layout_width="match_parent"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                app:hdBarCanBeClick="true"
                app:hdBarHeight="140dp"
                app:hdBarWidth="20dp"
                app:hdBarRadius="10dp"
                app:hdMaxValue="10"
                app:hdEmptyColor="@color/word_clear_clear"
                app:hdProgressColor="@color/word_info"
                app:hdProgressClickColor="@color/FishyRoseSoftSoft"
                app:hdPinBackgroundColor="@color/pin_background"
                app:hdPinTextColor="@color/word_clear"
                app:hdPinPaddingBottom="5dp"
                app:hdBarTitleColor="@color/word_clear"
                app:hdBarTitleTxtSize="16sp"
                app:hdPinTxtSize="17sp"
                app:hdPinMarginTop="10dp"
                app:hdPinMarginBottom="15dp"
                app:hdPinMarginEnd="22dp"
                app:hdBarTitleMarginTop="12dp"
                app:hdPinDrawable="@drawable/ic_pin"
                app:hdProgressDisableColor="@color/progress_disable"
                app:hdBarTitleSelectedColor="@color/word_clear"/>


        </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/bottom_sheet" />

</android.support.design.widget.CoordinatorLayout>
