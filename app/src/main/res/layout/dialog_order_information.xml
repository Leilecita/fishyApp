<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/white_background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingTop="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="InformaciÃ³n pedido"
            android:textSize="19sp"
            android:textColor="@color/title_dialog_info"
            android:gravity="center"
            android:textStyle="bold"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:padding="4dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/word"
                android:text="Nombre "/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="18dp"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:padding="4dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/word"
                android:text="Entrega "/>

            <TextView
                android:id="@+id/deliver_date"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="18dp"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Zona "
                android:textColor="@color/word"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/user_neighboor"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="18dp"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Creado "
                android:textColor="@color/word"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/created_date"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="18dp"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:id="@+id/deleteuser"
                android:src="@drawable/deleteuser"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#414141"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


