<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/white_background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingTop="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Gasto"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/title_dialog_helper"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/date"
                android:layout_height="33dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:hint="10-10-2020"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner_outcome"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:layout_weight="1"
                android:background="@drawable/rec_text_edit"
                android:paddingLeft="4dp"
                android:textAlignment="center"
                android:dropDownHeight="100dp"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_gravity="center_vertical"
                android:dropDownVerticalOffset="38dp"
                android:layout_height="35dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:id="@+id/line_other_type"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/description_type"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:fontFamily="@font/opensanssight"
                android:hint="Ingrese otro tipo de gasto"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/description"
                android:layout_height="33dp"
                android:paddingLeft="8dp"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:textColor="#5c5c5c"
                android:textSize="16sp"
                android:fontFamily="@font/opensanssight"
                android:hint="Detalle"
                android:background="@drawable/rec_text_edit"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/value"
                    android:hint="Monto  "
                    android:layout_width="130dp"
                    android:paddingLeft="8dp"
                    android:textColor="#5c5c5c"
                    android:layout_height="33dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensanssight"
                    android:background="@drawable/rec_text_edit"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:backgroundTint="@color/colorDialogButton"
                android:background="@drawable/rec_dialog"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

