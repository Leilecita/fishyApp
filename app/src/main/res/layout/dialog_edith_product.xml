<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:paddingTop="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Editar"
            android:textSize="18sp"
            android:textColor="@color/title_dialog_helper"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Nombre "
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/word" />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edit_name"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:fontFamily="@font/opensanssight"
                    android:paddingLeft="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorDialogButton"
                    style="@style/Widget.Design.TextInputLayout"
                    android:background="@drawable/rec_edit"
                    android:inputType="textCapWords"

                    />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="$ / Kg "
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/word"

                    />

                <EditText
                    android:id="@+id/edit_price"
                    android:hint="$"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    style="@style/Widget.Design.TextInputLayout"
                    android:fontFamily="@font/opensanssight"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorDialogButton"
                    android:layout_height="35dp"
                    android:textSize="16sp"
                    android:background="@drawable/rec_edit"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="$ / Kg may"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/word"

                    />

                <EditText
                    android:id="@+id/edit_wholesaler_price"
                    android:hint="$"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    style="@style/Widget.Design.TextInputLayout"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorDialogButton"
                    android:layout_height="35dp"
                    android:fontFamily="@font/opensanssight"
                    android:textSize="16sp"
                    android:background="@drawable/rec_edit"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Stock  "
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/word"
                    />

                <EditText
                    android:id="@+id/edit_stock"
                    android:layout_height="35dp"
                    android:paddingLeft="8dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"

                    android:textColor="@color/colorDialogButton"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/rec_edit"
                    android:fontFamily="@font/opensanssight"
                    android:inputType="textCapWords" />



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Stock2  "
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/word"
                    />

                <TextView
                    android:layout_height="33dp"
                    android:paddingLeft="8dp"
                    android:id="@+id/stock2"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorDialogButton"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginRight="6dp"
                   />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/textServer"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text=""
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/word"
                    />



            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:gravity="center"
                android:textColor="@color/colorDialogButton"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/ok"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:padding="4dp"
                android:backgroundTint="@color/colorDialogButton"
                android:background="@drawable/rec_dialog"
                android:text="guardar"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


