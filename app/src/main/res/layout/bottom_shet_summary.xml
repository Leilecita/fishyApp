<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/peek_bottom_shet" >

    <TextView
        android:layout_width="30dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        style="@style/DivisorCategoryStyle"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rec_bottom"
        android:layout_height="200dp">
        <TextView
            android:layout_width="32dp"
            style="@style/DivisorCategoryStyle"
            android:background="#7F7359"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/list_summary"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/s"
            android:layout_margin="2dp"
            android:paddingTop="3dp"
            android:paddingRight="4dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total del dÃ­a"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/FishyLetraDark"
                    android:textSize="@dimen/general_text"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="6dp"

                    android:layout_gravity="center_vertical"
                    android:id="@+id/view"
                    android:src="@drawable/viewmore"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/sumTot"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/FishyLetraDark"
                    android:textSize="@dimen/general_text"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/completeViewTot"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="6dp"
                            android:layout_gravity="center"
                            android:src="@drawable/money_dor"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Efectivo"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/FishyLetraDark"
                            android:textSize="@dimen/general_text"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/sumTotCash"
                            android:fontFamily="@font/opensanssight"
                            android:textColor="@color/FishyLetraDark"
                            android:textSize="@dimen/general_text"
                            />


                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/card"
                            />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tarjeta"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="@dimen/general_text"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/sumTotCard"
                        android:fontFamily="@font/opensanssight"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="@dimen/general_text"
                        />


                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:id="@+id/transf"
                            android:src="@drawable/transf"
                            />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Transferencia"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="@dimen/general_text"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/sumTotTrans"
                        android:fontFamily="@font/opensanssight"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="@dimen/general_text"
                        />


                </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total restante"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/FishyLetraDark"
                    android:textSize="@dimen/general_text"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/sumPendient"

                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/FishyLetraDark"
                    android:textSize="@dimen/general_text"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total recaudado"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/FishyLetraDark"
                    android:textSize="@dimen/general_text"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/sumDone"
                    android:textColor="@color/FishyLetraDark"
                    android:fontFamily="@font/opensansregular"

                    android:textSize="@dimen/general_text"
                    />


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>