<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/white_background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingTop="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Información usuario"
            android:textSize="19sp"
            android:textColor="@color/title_dialog_info"
            android:gravity="center"
            android:textStyle="bold"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/word"
                android:text="Nombre "/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="16sp"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/word"
                android:text="Dirección "/>

            <TextView
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="16sp"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/word"
                android:text="Zona "/>

            <TextView
                android:id="@+id/user_neighboor"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="16sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Telefono "
                android:textColor="@color/word"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/word_info"
                android:textSize="16sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/edituser"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/edituser"
                android:padding="8dp"
                android:textColor="#6e6e6e"
                android:textSize="18dp"
                android:textStyle="italic"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/phone"
                android:id="@+id/phone"
                android:padding="8dp"
                android:textColor="#6e6e6e"
                android:textSize="18dp"
                android:textStyle="italic"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/listuser"
                android:id="@+id/historyuser"
                android:padding="8dp"
                android:textColor="#6e6e6e"
                android:textSize="18dp"
                android:textStyle="italic"/>

            <ImageView
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:id="@+id/deleteuser"
                android:src="@drawable/deleteuser"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#414141"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

