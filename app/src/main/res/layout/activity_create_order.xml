<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:id="@+id/create_order">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:measureAllChildren="false"
            android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/deliverDate"
            android:layout_below="@id/title"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/rec_text_edit"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/date"
                    android:id="@+id/date_image"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/deliver_date"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/FishyLetraDark"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/colorAccentClear"
                    android:textSize="15sp"
                    android:hint="Dia de entrega"

                    android:inputType="textCapWords" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/rec_text_edit"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/time_image"
                    android:src="@drawable/time_zone"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/delivery_time"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/rec_text_edit"
                    android:gravity="center_vertical"
                    android:hint="Horario"
                    android:inputType="textCapWords"
                    android:paddingLeft="4dp"
                    android:textColor="@color/FishyLetraDark"
                    android:textColorHint="@color/colorAccentClear"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/rec_text_edit"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/payment_image"
                    android:src="@drawable/money_dor"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/payment_method"
                    android:layout_height="30dp"
                    android:paddingLeft="4dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:textColorHint="@color/colorAccentClear"
                    android:layout_width="match_parent"

                    android:textColor="@color/FishyLetraDark"
                    android:hint="Efectivo"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/rec_text_edit"
                android:layout_height="30dp">


                <ImageView
                    android:layout_width="18dp"
                    android:id="@+id/obs"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/obs2"/>

                <TextView
                    android:layout_height="30dp"
                    android:paddingLeft="4dp"
                    style="@style/Widget.Design.TextInputLayout"
                    android:textColorHint="@color/colorAccentClear"
                    android:layout_width="match_parent"
                    android:id="@+id/text_obs_order"
                    android:hint="Info adicional"
                    android:textColor="@color/FishyLetraDark"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:background="@drawable/rec_text_edit"
                    android:inputType="textCapWords" />

            </LinearLayout>


        </LinearLayout>

        </HorizontalScrollView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_items2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/deliverDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp"
            card_view:cardMaxElevation="4dp"
            card_view:cardElevation="2dp"
            card_view:contentPadding="4dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rel"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:padding="4dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text=""
                    android:textColor="@color/word"
                    android:layout_marginBottom="4dp"
                    />

                <TextView
                    android:layout_below="@+id/name"
                    android:id="@+id/style"
                    android:layout_width="match_parent"
                    android:layout_margin="0dp"
                    style="@style/DivisorCategoryStyle"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_items"
                    android:layout_below="@+id/style"
                    android:layout_width="match_parent"
                    android:paddingTop="6dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="2dp"
                    android:layout_height="match_parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/total_amount"
                    android:textColor="@color/word"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="17sp"
                    android:text="$"
                    android:layout_alignBottom="@id/list_items"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:id="@+id/total_amount"
                    android:layout_alignRight="@id/list_items"
                    android:layout_alignBottom="@id/list_items"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="17sp"
                    android:textColor="@color/word"
                    android:layout_marginRight="8dp"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/list_products2"
            >

            <android.support.v7.widget.RecyclerView
                android:layout_centerHorizontal="true"
                android:id="@+id/list_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
