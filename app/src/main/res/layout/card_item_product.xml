<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardMaxElevation="4dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:padding="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/fish"
            android:layout_gravity="center_vertical"
            android:id="@+id/image_pre"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/name_product"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Abadejo"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/word"
                        android:textSize="@dimen/general_text" />


                </LinearLayout>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/options"
                    android:src="@drawable/options"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.9"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Stock total"
                        android:padding="2dp"
                        android:textColor="@color/word"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/stock_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="340"
                        android:paddingLeft="4dp"
                        android:fontFamily="@font/opensanssight"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="@dimen/general_text" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:id="@+id/load_both"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/rosario"
                        android:src="@mipmap/ic_launcher_rosario"
                        />


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/mardel"
                        android:src="@mipmap/ic_launcher_lei"
                        />

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/rec_find"
                    android:backgroundTint="@color/white_background"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" $ costo"
                        android:padding="2dp"
                        android:textColor="@color/word"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/cost_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="200"
                        android:paddingLeft="4dp"
                        android:fontFamily="@font/opensanssight"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/rec_find"
                    android:backgroundTint="@color/white_background"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" $ min"
                        android:padding="2dp"
                        android:textColor="@color/word"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/price_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="890"
                        android:paddingLeft="4dp"
                        android:fontFamily="@font/opensanssight"
                        android:textColor="@color/FishyLetraDark"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rec_find"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/white_background"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" $ may"
                        android:padding="2dp"
                        android:textColor="@color/word"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/price_product_wholersale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1100"
                        android:paddingLeft="4dp"
                        android:fontFamily="@font/opensanssight"
                        android:textColor="@color/FishyRose3"
                        android:textSize="@dimen/general_text" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
