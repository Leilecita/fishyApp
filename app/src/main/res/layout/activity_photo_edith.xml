<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ededed"
    >
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_mistake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="4dp"
        android:backgroundTint="#fafafa"
        card_view:contentPadding="2dp"


        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            >
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:text="Editar foto"
                    android:textSize="18sp"
                    android:textColor="@color/word"
                    android:gravity="center"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/person_color"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/select_photo"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    card_view:cardBackgroundColor="@color/colorDialogButton"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="1dp"
                    card_view:cardMaxElevation="1dp"
                    card_view:contentPaddingBottom="2dp"
                    card_view:contentPaddingLeft="4dp"
                    card_view:contentPaddingRight="4dp"
                    card_view:contentPaddingTop="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text=" "
                            android:textColor="#FFFF"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/camera"

                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


