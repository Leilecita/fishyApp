<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/resume">

    <TextView
        android:id="@+id/deliver_date"

        android:layout_height="30dp"
        android:paddingLeft="8dp"
        style="@style/Widget.Design.TextInputLayout"
        android:background="@drawable/rec_find"
        android:layout_width="match_parent"
        android:hint="Ingrese fecha"
        android:textColor="@color/word"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:inputType="textCapWords" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/deliver_date"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Pescado"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Cantidad"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="   Precio"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="     Total"

            />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_summary"
        android:layout_below="@+id/line1"
        android:layout_above="@id/s"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/s"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total del dÃ­a"
                android:textColor="#000"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1000"
                android:id="@+id/total_day"
                android:textColor="#000"
                android:textSize="18sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total restante"
                android:textColor="#000"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1000"
                android:id="@+id/total_rest"
                android:textColor="#000"
                android:textSize="18sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total recaudado"

                android:textColor="#000"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1000"
                android:id="@+id/total_done"
                android:textColor="#000"
                android:textSize="18sp"
                />


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
